@{
    // Título Principal de la Página (Coherente con el Dashboard)
    ViewData["Title"] = "Agregar Nuevo Ítem al Inventario";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">

            <div class=" shadow-sm border-0 rounded-4">

                <div class="bg-dark text-white text-center rounded-top-2 p-2">
                    <h3 class="fw-bold mb-1 text-white">Registrar Nuevo Producto</h3>
                    <p class="">Completa los datos del nuevo artículo de inventario.</p>
                </div>

                <div class="p-4 p-md-5">

                    <form action="/Items/AddItem" method="post" class="needs-validation" novalidate>

                        <div class="row mb-4 g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="inputNombre" placeholder="" required>
                                    <label for="inputNombre">Nombre del Producto</label>
                                    <div class="invalid-feedback">El nombre del producto es obligatorio.</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="inputCategoria" placeholder="" required>
                                    <label for="inputCategoria">Categoría</label>
                                    <div class="invalid-feedback">La categoría es obligatoria.</div>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4 g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" class="form-control" id="inputStock" placeholder="" min="0" required>
                                    <label for="inputStock">Stock Inicial</label>
                                    <div class="invalid-feedback">Introduce una cantidad válida (mínimo 0).</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="date" class="form-control" id="inputFecha" value="@DateTime.Now.ToString("yyyy-MM-dd")">
                                    <label for="inputFecha">Fecha de Ingreso</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-5">
                            <label for="selectEstado" class="form-label fw-bold">Estado del Producto</label>
                            <select class="form-select form-select-lg" id="selectEstado" required>
                                <option value="" selected disabled>Selecciona un estado</option>
                                <option value="Disponible">Disponible</option>
                                <option value="Bajo Stock">Bajo Stock</option>
                                <option value="Agotado">Agotado</option>
                                <option value="De Baja">De Baja</option>
                            </select>
                            <div class="invalid-feedback">Debes seleccionar el estado del producto.</div>
                        </div>

                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-primary btn-lg shadow">
                                <i class="bi bi-floppy me-2"></i>Guardar Ítem
                            </button>

                            <a href="/" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle me-2"></i>Cancelar y Volver
                            </a>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap Client-Side Validation Script
        (() => {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}