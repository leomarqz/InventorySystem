@{
    // Título Principal de la Página
    ViewData["Title"] = "Editar Ítem en Inventario";

}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">

            <div class="card shadow-lg border-0 rounded-4">

                <div class="card-header bg-dark text-white text-center rounded-top-4 p-4">
                    <h1 class="h3 fw-bold mb-1">✏️ Editar Producto: Monitor Ultra 27" 4K</h1>
                    <p class="mb-0 text-white-50">Modifica los campos necesarios para actualizar este producto.</p>
                </div>

                <div class="card-body p-4 p-md-5">

                    <form action="/Items/Edit/004" method="post" class="needs-validation" novalidate>

                        <div class="mb-4">
                            <label for="itemId" class="form-label text-muted">ID de Producto</label>
                            <input type="text" class="form-control" id="itemId" value="004" disabled>
                        </div>

                        <div class="row mb-4 g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="inputNombre" placeholder="Nombre del Producto" value="Monitor Ultra 27&quot; 4K" required>
                                    <label for="inputNombre">Nombre del Producto</label>
                                    <div class="invalid-feedback">El nombre del producto es obligatorio.</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="inputCategoria" placeholder="Categoría" value="Electrónica" required>
                                    <label for="inputCategoria">Categoría</label>
                                    <div class="invalid-feedback">La categoría es obligatoria.</div>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-4 g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="number" class="form-control" id="inputStock" placeholder="Stock Inicial" min="0" value="0" required>
                                    <label for="inputStock">Stock Actual</label>
                                    <div class="invalid-feedback">Introduce una cantidad válida (mínimo 0).</div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="date" class="form-control" id="inputFecha" value="2025-12-02">
                                    <label for="inputFecha">Fecha de Última Modificación</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-5">
                            <label for="selectEstado" class="form-label fw-bold">Estado del Producto</label>
                            <select class="form-select form-select-lg" id="selectEstado" required>
                                <option value="" disabled>Selecciona un estado</option>
                                <option value="Disponible">Disponible</option>
                                <option value="Bajo Stock">Bajo Stock</option>
                                <option value="Agotado" selected>Agotado</option>
                                <option value="De Baja">De Baja</option>
                            </select>
                            <div class="invalid-feedback">Debes seleccionar el estado del producto.</div>
                        </div>

                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-primary btn-lg shadow">
                                <i class="bi bi-save me-2"></i>Guardar Cambios
                            </button>

                            <a href="/" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle me-2"></i>Cancelar y Volver
                            </a>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap Client-Side Validation Script
        (() => {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}